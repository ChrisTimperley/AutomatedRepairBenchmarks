#!/usr/bin/python3
import os
import json

def build_manifest():
    tests = []
    with open("tests.txt", "r") as f:
        for command in f:
            command = command.strip()
            inpt = command.split('< ')[1]
            command = "<<EXECUTABLE>> {}".format(command)
            test = {
                'command': command,
                'inputs': {
                    inpt: inpt
                }
            }
            tests.append(test)

    # write to file
    with open("tests.pythia.json", "w") as f:
        json.dump(tests, f, indent=2, sort_keys=True)

    # destroy list of tests
    os.remove("tests.txt")
    

if __name__ == "__main__":
    build_manifest()
