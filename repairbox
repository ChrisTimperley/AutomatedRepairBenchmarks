#!/usr/bin/env python
import os
import yaml

class RepairBox(object):

    """
    Constructs a new RepairBox interface
    """
    def __init__(self, location=os.path.dirname(os.path.realpath(__file__))):
        self.location = location
        
        # find all datasets, programs and bugs
        self.datasets = []
        self.programs = []
        self.bugs = []

        for (root, dirs, files) in os.walk(location):
            self.datasets += [f for f in files if f.endswith(".dataset.yaml")]
            self.programs += [f for f in files if f.endswith(".program.yaml")]
            self.bugs += [f for f in files if f.endswith(".bug.yaml")]

        # parse and type check manifests

if __name__ == "__main__":
    rbox = RepairBox()
